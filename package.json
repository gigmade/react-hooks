{
  "name": "@gigmade/react-hooks",
  "version": "0.1.7",
  "description": "Collection of useful hooks",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "babel": {
    "comments": false,
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript",
      "@babel/preset-react"
    ]
  },
  "watch": {
    "build": "src/*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "build": "cross-env rimraf dist && NODE_ENV=production babel --extensions '.js,.jsx,.ts,.tsx' --source-maps --out-dir dist src --copy-files \"**/*.json\"",
    "build:watch": "npm-watch",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/no-extraneous-dependencies": 2
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "~7.19.1",
    "@babel/preset-env": "~7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "cross-env": "^7.0.3",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.4",
    "lodash": "4.17.21",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.1",
    "react": "^17.0.1",
    "rimraf": "^3.0.2",
    "use-debounce": "8.0.4"
  },
  "peerDependencies": {
    "lodash": "4.17.21",
    "react": "^17.0.1",
    "use-debounce": "8.0.4"
  },
  "author": "gigmade ltd (https://www.gigmade.com)",
  "homepage": "",
  "license": "MIT",
  "repository": "",
  "dependencies": {
    "react-layout-effect": "^1.0.5"
  }
}
